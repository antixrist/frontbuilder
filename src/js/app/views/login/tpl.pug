form.panel.login.is-loading-block(:class="{ '-loading': loading }", @submit.prevent="submit()")
  fieldset(:disabled="loading")
    .panel-header.login-header(layout="row center-justify")
      div(self="size-x1")
        i.panel-icon.icon-tasks
        | &nbsp; Авторизация
    .panel-box
      .panel-y-sections
        div(v-if="errorMessage")
          p.c-alert.-danger(v-html="errorMessage")
        .form-group
          label Логин:
          input.input.-size-sm.-wide(
            placeholder="Введите ваш логин",
            v-model="form.login",
            v-focus="",
            :class="{ '-danger': hasError('login') }"
          )
          div.errors(v-if="hasError('login')", :class="{ 'u-text-danger': hasError('login') }")
            div.error.u-text-sm(v-for="error in errors.login") {{ error }}
        .form-group
          label Пароль:
          input.input.-size-sm.-wide(
            placeholder="Введите ваш пароль",
            v-model="form.password",
            type="password",
            :class="{ '-danger': hasError('password') }"
          )
          div.errors(v-if="hasError('password')", :class="{ 'u-text-danger': hasError('password') }")
            div.error.u-text-sm(v-for="error in errors.password") {{ error }}
    .actions: .u-text-center
      button.btn.-size-sm.-primary(type="submit") Войти
